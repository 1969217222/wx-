
<!-- 图文信息 -->
<view class='productInfo'>
  <view class='xinxi'>商品详情</view>
  <image class='img' src="{{productInfo.pic}}"></image>
  <view class='desc'>
    <view class='jieshao'>{{productInfo.name}}</view>
    <view class='ping'>暂无评论</view>
    <view>{{productInfo.description}}</view>
    {{productInfo.details}}
  </view>
</view>


<!-- 购物车 -->
<view class='shoping'>
  <view class='shop-img'>
    <image src='../../images/tab9.png' bindtap="goShop"></image>
  </view>
  <view class='go-shop' bindtap='addShop'>加入购物车</view>
  <view class='buy-now'>直接购买</view>
</view>